@model mvc1.Models.Post

@using Microsoft.AspNetCore.Identity
@addTagHelper *, mvc1
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@inject SignInManager<IdentityUser> SignInManager

@{
    Layout = "_Layout";
}

@await Html.PartialAsync("_Post")

@if (Model.Author == @User.Identity.Name){
<a asp-action="update" asp-controller="blog" asp-route-id=@Model.Id>Update</a>
<a asp-action="delete" asp-controller="blog" asp-route-id=@Model.Id>Delete</a>
}

